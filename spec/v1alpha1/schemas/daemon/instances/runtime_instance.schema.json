      "enum": ["starting", "ready", "busy", "stopping", "stopped", "error"]
    },
    "runtime_version": {
      "type": "string"
    },
    "runtime_type": {
      "type": "string"
    },
    "address": {
      "type": "string"
    },
    "capabilities": {
      "type": "object",
      "additionalProperties": true
    },
    "metadata": {
      "$ref": "../../common/metadata.schema.json"
    },
    "extensions": {
