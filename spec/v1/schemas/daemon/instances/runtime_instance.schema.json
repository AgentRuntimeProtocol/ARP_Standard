{
  "title": "RuntimeInstance",
  "type": "object",
  "additionalProperties": false,
  "required": ["instance_id", "state", "runtime_api_endpoint"],
  "properties": {
    "instance_id": {
      "type": "string"
    },
    "state": {
      "type": "string",
      "enum": ["starting", "ready", "busy", "stopping", "stopped", "error"]
    },
    "managed": {
      "type": "boolean",
      "default": true
    },
    "runtime_profile": {
      "type": "string"
    },
    "runtime_name": {
      "type": "string"
    },
    "runtime_version": {
      "type": "string"
    },
    "runtime_api_endpoint": {
      "$ref": "../../common/endpoint_locator.schema.json"
    },
    "metadata": {
      "$ref": "../../common/metadata.schema.json"
    },
    "extensions": {
      "$ref": "../../common/extensions.schema.json"
    }
  }
}
