{
  "title": "Health",
  "type": "object",
  "additionalProperties": false,
  "required": ["status", "time"],
  "properties": {
    "status": {
      "type": "string",
      "enum": ["ok", "degraded", "down"]
    },
    "time": {
      "type": "string",
      "format": "date-time"
    },
    "checks": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["name", "status"],
        "properties": {
          "name": {
            "type": "string"
          },
          "status": {
            "type": "string",
            "enum": ["ok", "degraded", "down"]
          },
          "message": {
            "type": "string"
          },
          "details": {
            "type": "object",
            "additionalProperties": true
          }
        }
      }
    },
    "extensions": {
      "$ref": "extensions.schema.json"
    }
  }
}

